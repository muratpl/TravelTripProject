@model TravelTripProject.Models.Siniflar.Blog

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Blog</h2>

<form class="form-group" method="post">
    @Html.LabelFor(x => x.Title)
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })

    <br />

    @Html.LabelFor(x => x.BlogImage)
    @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control" })

    <br />

    @Html.LabelFor(x => x.Description)
    @Html.TextAreaFor(x => x.Description,15,1, new { @class = "form-control" })

    <br />

    @Html.LabelFor(x => x.LikeCount)
    @Html.TextAreaFor(x => x.LikeCount, new { @class = "form-control" })

    <br />

    <button class="btn btn-primary">Ekle</button>


</form>





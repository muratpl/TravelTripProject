@model TravelTripProject.Models.Siniflar.Blog

@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Güncelleme Sayfası</h2>

@using (Html.BeginForm())
{
    @Html.LabelFor(x => x.Id)
    @Html.TextBoxFor(x => x.Id, new { @class = "form-control", @ReadOnly = "Readonly" })

    <br />

    @Html.LabelFor(x => x.Title)
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })

    <br />

    @Html.LabelFor(x => x.Date)
    @Html.EditorFor(x => x.Date, new { htmlAttributes = new { @class = "form-control" } })

    <br />


    @Html.LabelFor(x => x.Description)
    @Html.TextAreaFor(x => x.Description, 15, 1, new { @class = "form-control" })

    <br />

    @Html.LabelFor(x => x.BlogImage)
    @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control" })

    <br />

    @Html.LabelFor(x => x.LikeCount)
    @Html.TextBoxFor(x => x.LikeCount, new { @class = "form-control" })

    <br />

    <button class="btn btn-primary">Güncelle</button>
}


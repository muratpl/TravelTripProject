@using TravelTripProject.Models.Siniflar
@model List<Blog>

<div class="con-bot">

    @foreach (var x in Model)
    {
        <div class="left">
            <div class="bot-left">
                <a href="/Blog/BlogDetay/@x.Id"><img src="@x.BlogImage" alt="" /></a>
            </div>
            <div class="left-text">
                <h4>@x.Title</h4>
                <span class="doller"> @x.Date.Value.ToString("dd.MM.yyyy") </span>

                @{try{ <p>@x.Description.Substring(0, 180)...</p>}catch{ @x.Description} }
                <p><a href="/Blog/BlogDetay/@x.Id"><span class="read">Read More >></span></a></p>
            </div>
        </div>
    }
    

    @Html.Action("Partial2", "Home")
    <div class="clear"></div>
</div>

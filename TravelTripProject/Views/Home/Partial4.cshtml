@using TravelTripProject.Models.Siniflar
@model List<Blog>

<div class="box-left">

    @foreach (var x in Model)
    {
        <div class="bot-img">
            <a href="/Blog/BlogDetay/@x.Id"><img src="@x.BlogImage" style="height:96px" alt="" /></a>
        </div>
        <div class="bot-desc">
             @{try{ <p>@x.Description.Substring(0, 135)...</p>}catch{ @x.Description} }
        </div>
        <div class="clear"></div>
    }

</div>